# Будет ли работать без этой команды?:
exec_always xrdb ~/.Xresources

set_from_resource $bg_col       .bg          #FF0000
set_from_resource $lbg_col      .lightBg     #FF0000
set_from_resource $dbg_col      .darkBg      #FF0000
set_from_resource $fg_col       .foreground  #FF0000
set_from_resource $t_col        .textBg      #FF0000
set_from_resource $red_col      .color2      #FF0000
set_from_resource $whi_col      .color15     #FF0000

# class                 border  bground  text     indicator child_border
client.focused          $bg_col $lbg_col $t_col   $t_col    $t_col
client.focused_inactive $bg_col $dbg_col $t_col   $t_col    $bg_col
client.unfocused        $bg_col $bg_col  $t_col   $t_col    $bg_col
client.urgent           $bg_col $red_col $whi_col $t_col    $bg_col
client.placeholder      $bg_col $bg_col  $whi_col $t_col    $t_col

client.background       #FFFFFF

bar {
  mode hide
  position top
  status_command i3status
  modifier Mod1
  colors {
    background $bg_col
    statusline $t_col
    separator  $t_col

    focused_workspace  $lbg_col $lbg_col $t_col
    active_workspace   $lbg_col $lbg_col $t_col
    inactive_workspace $dbg_col $dbg_col $t_col
    urgent_workspace   $dbg_col $red_col $whi_col
    binding_mode       $dbg_col $red_col $whi_col
  }
}

